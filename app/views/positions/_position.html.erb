<% @positions_index ||= 0 %>
<% if editable? position  %>
    <%= render partial: 'positions/thumbnails/form', locals: {position: position}  %>
<% elsif !position.new? || owns?(position.discussion) %>
    <%= render partial: 'positions/thumbnails/position', locals: {position: position, index: @positions_index} %>
<% end %>

<%@positions_index += 1%>