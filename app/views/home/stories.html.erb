<div class="page-header">
	<h1>Random Debates</h1>
</div>
	<div class="body">
		<%@discussions.each_slice(3).each do |row|%>
		<div class="row">
			<%row.each do |discussion|%>
			<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<div class="caption">
				  <h3> <%=discussion.header%></h3>
				  <p><b>Type:</b> <%=discussion.type.name%></p>
				  <p><b>Topic:</b> <%=discussion.topic.name%></p>
				 	
				  <p><%=simple_format(discussion.body)%></p>
				 </div>
				 <div class="caption footer">
				 	<p>
				 	<span>
				 		<a href="#" class="btn btn-success" role="button"><span class="glyphicon glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></a>
				 		<span class="badge"><%=discussion.score.to_i%></span>
				 		<a href="#" class="btn btn-danger" role="button"><span class="glyphicon glyphicon glyphicon-thumbs-down" aria-hidden="true"></span></a>
				 	</span> | <span><%=link_to "What do you think?", discussion, class:"btn btn-primary", role:"button"%></span>
				 	</p>
				 </div>
			</div>
			</div>
			<%end%>
		  </div>
		  <%end%>
	 </div>			  
</div>