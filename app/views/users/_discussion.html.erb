<%discussion=position.discussion%>
<div class="col-sm-6 col-md-4">
	<div class="thumbnail">
		<div class="caption">
			<h3> <%=discussion.header%></h3>
			<p><b>Type:</b> <%=discussion.type.name%></p>
			<p><b>Topic:</b> <%=discussion.topic.name%></p>
			<p><%=simple_format(discussion.body)%></p>
		 </div>
		<div class="caption footer">
			<p>
				<%=link_to "View", discussion, class:"btn btn-primary", style:"width:100%"%>
				<hr>
				<%=link_to "Accept", edit_position_path(position), class:"btn btn-success"%> | 
				<%=link_to "Reject", position, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' }%>   <br> 
				<hr>
				<span>Invited by:</span> <%=link_to discussion.user.full_name, discussion.user%>
			</p>
		</div>
	</div>
</div>